{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/**/*.tsx"
  ],
  "exclude": ["**/node_modules/*", "dist", "loader", "**/*.spec.ts", "**/*.spec.tsx"]
}
